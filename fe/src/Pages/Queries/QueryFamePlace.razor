@page "/query-fame-place"
@using smarthotel.ui.Models.DTOs.Spaces
@using smarthotel.ui.Models.DTOs.Services
@inherits QueryFamePlaceViewModel

<div class="dashboard">
    <div class="row">
        <div class="col-md-12">
            <div class="card issue-types">
                <h4 class="card-header">Busier places By Year</h4>
                 <div class="card-body"> 
                     <div class="row"> 
                         <TelerikGrid Data="@SpaceState.Value.SpaceFameYearList" Pageable="true" PageSize="10" Height="600px"
                                      Reorderable="true" Resizable="true" Groupable="false" 
                                      FilterMode="GridFilterMode.FilterRow"> 
                             <GridColumns> 
                                 <GridColumn Field="@(nameof(SpaceFameDto.SpaceName))" Title=" Space Name" Groupable="false" /> 
                                 <GridColumn Field="@(nameof(SpaceFameDto.Visits))" Title="Visits" 
                                             Groupable="false" /> 
                                 <GridColumn Field="@(nameof(SpaceFameDto.AgeGroup))" Title="Age Groups" 
                                             Groupable="false" />
                             </GridColumns> 
                         </TelerikGrid> 
                     </div> 
                 </div> 
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="card issue-types">
            <h4 class="card-header">Busier places By Month</h4>
             <div class="card-body">
                 <div class="row"> 
                     <TelerikGrid Data="@SpaceState.Value.SpaceFameMonthList" Pageable="true" PageSize="10" Height="600px"
                                  Reorderable="true" Resizable="true" Groupable="false" 
                                  FilterMode="GridFilterMode.FilterRow"> 
                         <GridColumns> 
                             <GridColumn Field="@(nameof(SpaceFameDto.SpaceName))" Title=" Space Name" Groupable="false" /> 
                             <GridColumn Field="@(nameof(SpaceFameDto.Visits))" Title="Visits" 
                                         Groupable="false" /> 
                             <GridColumn Field="@(nameof(SpaceFameDto.AgeGroup))" Title="Age Groups" 
                                         Groupable="false" />
                         </GridColumns> 
                     </TelerikGrid> 
                 </div> 
             </div> 
        </div>
    </div>
</div>



